{
  "name": "splendor-game",
  "private": true,
  "version": "1.0.0",
  "description": "Monorepo for Splendor Game (client + server + shared)",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev:client": "pnpm --filter splendor-game-client dev",
    "start:server": "pnpm --filter splendor-game-server start",
    "build:shared": "pnpm --filter @game/shared build",
    "build:client": "pnpm --filter splendor-game-client build",
    "build:server": "pnpm --filter splendor-game-server build",
    "lint": "pnpm --recursive lint"
  },
  "dependencies": {
    "boardgame.io": "^0.50.2"
  },
  "devDependencies": {
    "@types/node": "^24.3.1",
    "eslint": "^9.33.0",
    "prettier": "^3.3.3",
    "typescript": "^5.9.2"
  }
}